{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate para projetos Node.js",
  "repository": "https://github.com/diasjoaovitor/node-boilerplate.git",
  "author": "Jo√£o Vitor <jvitordiass@outlook.com.br>",
  "license": "MIT",
  "main": "src/app.ts",
  "keywords": [
    "node-boilerplate",
    "eslint",
    "commit-linter",
    "prettier",
    "jest",
    "typescript"
  ],
  "scripts": {
    "dev": "tsc-alias && tsx watch src/app.ts",
    "start": "node -r tsconfig-paths/register dist/src/app.js",
    "build": "tsc && tsc-alias",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watchAll",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@eslint/eslintrc": "github:eslint/eslintrc",
    "@eslint/js": "^9.25.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@typescript-eslint/parser": "^8.31.0",
    "commitlint-config-emoji-convention": "^1.0.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  }
}
