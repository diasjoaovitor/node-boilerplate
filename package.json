{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "This template provides a setup for Node.js development",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "ts-node src/app.ts",
    "dev": "nodemon -e ts,json --exec npm start",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.20",
    "git-commit-msg-linter": "^5.0.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
